{
  "name": "cwa-app-ccl",
  "version": "1.0.0",
  "description": "Common Covid Logic (CCL) for Android and iOS",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "npm run build:clean && npm run build:jfn-test-cases && npm run build:ccl-test-cases && npm run build:ccl-configuration && npm run test:dist",
    "build:clean": "rimraf dist",
    "build:ccl-test-cases": "node scripts/export-ccl-test-cases.js --json-target dist/ccl-test-cases.gen.json",
    "build:ccl-configuration": "node scripts/export-ccl-configuration.js --json-target dist/ccl-configuration.json --json-rule-target-dir dist --cbor-target dist/ccl-configuration.bin",
    "build:jfn-test-cases": "node scripts/export-jfn-test-cases.js --json-target dist/jfn-test-cases.gen.json",
    "fix": "standard 'lib/**/*.js' 'test/**/*.js' 'scripts/**/*.js' --fix --verbose | snazzy",
    "lint": "standard 'lib/**/*.js' 'test/**/*.js' 'scripts/**/*.js' --verbose | snazzy",
    "postinstall": "patch-package",
    "test": "npm run test:unit",
    "test:ccl": "mocha test/unit/ccl --recursive --color",
    "test:dist": "mocha test/dist --recursive --color",
    "test:unit": "mocha test/unit --recursive --color",
    "prepare": "husky install",
    "watch:ccl": "mocha test/unit/ccl --recursive --color --watch --extension js,json,yaml",
    "watch:unit": "mocha test/unit --recursive --color --watch --extension js,json,yaml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/corona-warn-app/cwa-app-ccl.git"
  },
  "keywords": [],
  "author": "SAP SE <corona-warn-app.opensource@sap.com>",
  "contributors": [
    "Maximilian Lenkeit <maximilian.lenkeit@sap.com>"
  ],
  "license": "Apache-2.0",
  "bugs": {
    "url": "https://github.com/corona-warn-app/cwa-app-ccl/issues"
  },
  "homepage": "https://github.com/corona-warn-app/cwa-app-ccl#readme",
  "devDependencies": {
    "base45": "2.0.1",
    "cbor": "8.1.0",
    "chai": "4.3.4",
    "chalk": "4.1.2",
    "chance": "1.1.8",
    "cose-js": "0.8.3",
    "deepmerge": "4.2.2",
    "fs-extra": "10.0.0",
    "husky": "7.0.4",
    "js-yaml": "4.1.0",
    "jsonpath": "1.1.1",
    "lint-staged": "12.1.7",
    "mocha": "9.1.3",
    "pako": "2.0.4",
    "rimraf": "2.7.1",
    "snazzy": "9.0.0",
    "standard": "16.0.4",
    "strip-ansi": "6.0.1",
    "transliteration": "2.2.0",
    "yargs": "16.2.0"
  },
  "dependencies": {
    "async": "3.2.3",
    "fast-xml-parser": "4.0.1",
    "json-logic-js": "2.0.2",
    "jsonschema": "1.4.0",
    "moment": "2.29.1",
    "patch-package": "6.4.7",
    "printj": "1.3.0"
  },
  "lint-staged": {
    "*.js": [
      "standard --fix"
    ]
  }
}
